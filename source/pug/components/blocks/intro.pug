mixin intro()
  -
    const steps = [
      'Выберите направление',
      'Изучите идеи путешественников',
      'Находите тех, кто похож на&nbsp;вас',
      'Путешествуйте вместе!'
    ]

  .intro
    .intro__background
      +img("content", "intro-bg", "png", 1440, 640, "Фон для блока intro.")
    .container
      +title({tag: "h1", text: "В&nbsp;путешествие с&nbsp;крутыми попутчиками!"}).title--h1.title--white.intro__title
      .intro__image
        +img("content", "intro-traveler", "png", 430, 640, "Путешественник с чемоданом.")
      blockquote.intro__quote «Лучшее приложение, что я&nbsp;видел в&nbsp;жизни!»
        cite Мурат Эльтазин #[br] главный редактор газеты &laquo;гаджетлайф&raquo;
      +steps(steps).intro__steps
